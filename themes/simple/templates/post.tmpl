{#  -*- coding: utf-8 -*- #}
{% extends 'base.tmpl' %}

{% block content %}
<article class="post">
	<h1>{{ title|e }}</h1>

	<ul class="meta">
		<li><time class="published dt-published" datetime="{{ post.date.isoformat() }}" itemprop="datePublished">{{ post.formatted_date(date_format) }}</time></li>
		<li><a href="{{ post.source_link() }}" id="sourcelink">Source</a></li>
		<li><a href="{{ post.permalink(absolute=True) }}" id="permalink">Permanent link</a></li>
	</ul>
	
	<div class="content">{{ post.text() }}</div>

	{% if post.tags %}
	<div class="tags">
		Filed under
		<ul itemprop="keywords" class="tags">
			{% for tag in post.tags %}
				<li><a class="tag p-category" href="{{ _link('tag', tag) }}" rel="tag">{{ tag }}</a></li>
			{% endfor %}
		</ul>
	</div>
	{% endif %}
</article>
{% endblock %}
